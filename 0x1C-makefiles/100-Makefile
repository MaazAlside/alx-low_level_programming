SRC = main.c school.c
OBJ = $(SRC:.c=.o)
NAME = school

.PHONY: all clean oclean fclean re

all: $(NAME)

$(NAME): $(OBJ)
	@$(CC) -o $(NAME) $(OBJ) $(CFLAGS)

$(OBJ): %.o: %.c
	@$(CC) -c -o $@ $< $(CFLAGS)

clean:
	@$(RM) *~ $(NAME) $(OBJ)

oclean:
	@$(RM) $(OBJ)

fclean: clean
	@$(RM) $(NAME)

re: fclean all

ifneq ($(wildcard m.h),m.h)
    $(error Header file m.h is missing)
endif
